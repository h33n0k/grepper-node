{
	"name": "grepper-node",
	"version": "0.1.2",
	"scripts": {
		"build": "tsup",
		"test": "jest --no-coverage",
		"test:coverage": "jest --coverage",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"format": "prettier --write \"**/*.+(ts|mjs|json)\"",
		"prepare": "husky",
		"release": "standard-version"
	},
	"tsup": {
		"format": [
			"cjs",
			"esm"
		],
		"entry": [
			"./src/index.ts"
		],
		"dts": true,
		"shims": true,
		"skipNodeModulesBundle": true,
		"clean": true
	},
	"lint-staged": {
		"*.ts": "eslint",
		"*": "prettier --write"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"printWidth": 80,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 2
	},
	"dependencies": {
		"@effect/schema": "^0.75.5",
		"effect": "^3.11.4"
	},
	"devDependencies": {
		"@eslint/js": "^9.16.0",
		"@faker-js/faker": "^9.3.0",
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.1",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.5.0",
		"prettier": "^3.4.2",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.2.5",
		"ts-node-dev": "^2.0.0",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0"
	}
}
